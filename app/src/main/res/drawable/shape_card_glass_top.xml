<?xml version="1.0" encoding="utf-8"?>
<!-- Glass Widget Top Card: With 20% White Top Light Absorption Mask -->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="144dp"
    android:height="71dp"
    android:viewportWidth="144"
    android:viewportHeight="71">

    <!-- 1. Base Glass Material -->
    <path
        android:pathData="M 0 28 C 0 8 8 0 28 0 L 116 0 C 136 0 144 8 144 28 L 144 71 L 0 71 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="0"
                android:startY="0"
                android:endX="0"
                android:endY="71">
                <item android:offset="0.0" android:color="#20FFFFFF" />
                <item android:offset="1.0" android:color="#10F0F0F0" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- 2. Surface Reflection -->
    <path
        android:pathData="M 0 28 C 0 8 8 0 28 0 L 116 0 C 136 0 144 8 144 28 L 144 71 L 0 71 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="0"
                android:startY="0"
                android:endX="144"
                android:endY="71">
                <item android:offset="0.0" android:color="#30FFFFFF" />
                <item android:offset="0.4" android:color="#00FFFFFF" />
            </gradient>
        </aapt:attr>
    </path>


    <!-- 3. Adaptive Edge Definition (Very Faint) -->
    <path
        android:pathData="M 0.5 28 C 0.5 8 8 0.5 28 0.5 L 116 0.5 C 136 0.5 143.5 8 143.5 28 L 143.5 70.5 L 0.5 70.5 Z"
        android:strokeWidth="0.5"
        android:strokeColor="#05000000" />

    <!-- 4. Rim Light (Top Edge Highlight) - SOFTENED -->
    <path
        android:pathData="M 1 28 C 1 8 8 1 28 1 L 116 1 C 136 1 143 8 143 28 L 143 70 L 1 70 Z"
        android:strokeWidth="1.5">
        <aapt:attr name="android:strokeColor">
            <gradient
                android:type="linear"
                android:startY="0"
                android:endY="71">
                <item android:offset="0.0" android:color="#40FFFFFF" />
                <item android:offset="0.4" android:color="#05FFFFFF" />
                <item android:offset="1.0" android:color="#00FFFFFF" />
            </gradient>
        </aapt:attr>
    </path>

</vector>
