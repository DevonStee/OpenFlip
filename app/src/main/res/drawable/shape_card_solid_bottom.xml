<?xml version="1.0" encoding="utf-8"?>
<!-- Solid Widget Bottom Card: Darker matte carbon gray (recessed/shadowed surface) -->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="144dp"
    android:height="71dp"
    android:viewportWidth="144"
    android:viewportHeight="71">

    <!-- Main Fill: Darker gradient (shadowed surface - recessed look) -->
    <path
        android:pathData="M 0 0 L 144 0 L 144 43 C 144 63 136 71 116 71 L 28 71 C 8 71 0 63 0 43 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startY="0"
                android:endY="71">
                <item android:offset="0.0" android:color="#FF181818" />
                <item android:offset="0.5" android:color="#FF151515" />
                <item android:offset="1.0" android:color="#FF1A1A1A" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Inner Glow/Stroke: 1dp faint white -->
    <path
        android:pathData="M 0.5 0.5 L 143.5 0.5 L 143.5 43 C 143.5 63 136 70.5 116 70.5 L 28 70.5 C 8 70.5 0.5 63 0.5 43 Z"
        android:strokeWidth="1"
        android:strokeColor="#10FFFFFF" />

    <!-- Top Edge Shadow Line 1 (Simulated drop shadow from upper page) -->
    <path
        android:pathData="M 1 0.5 L 143 0.5"
        android:strokeWidth="1"
        android:strokeColor="#40000000" />
    
    <!-- Top Edge Shadow Line 2 (Fade out) -->
    <path
        android:pathData="M 1 1.5 L 143 1.5"
        android:strokeWidth="1"
        android:strokeColor="#10000000" />

</vector>
