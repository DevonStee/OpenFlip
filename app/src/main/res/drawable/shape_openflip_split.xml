        </aapt:attr>
    </path>

    <!-- 3. Bottom Card Half (Y: 81-158) -->
    <path android:pathData="M 2 81 L 158 81 L 158 136 Q 158 158 136 158 L 24 158 Q 2 158 2 136 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startY="81"
                android:endY="158"
                android:type="linear">
                <item android:offset="0.00" android:color="#FF0C0C0C" />
