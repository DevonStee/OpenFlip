                <item android:offset="0.97" android:color="#FF383838" />
                <item android:offset="1.00" android:color="#FF252525" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- 1b. Base Layer - Middle gap (solid brighter gray, narrower) -->
    <path 
        android:pathData="M 2 80 L 158 80 L 158 81 L 2 81 Z"
        android:fillColor="#FF3A3A3A" />

    <!-- 1c. Base Layer - Bottom border (vertical gradient) -->
    <path 
        android:pathData="M 2 81 L 158 81 L 160 136 Q 160 160 136 160 L 24 160 Q 0 160 0 136 L 2 81 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startY="81"
                android:endY="160"
