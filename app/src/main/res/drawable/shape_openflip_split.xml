        android:pathData="M 0 24 Q 0 0 24 0 L 136 0 Q 160 0 160 24 L 158 80 L 2 80 L 0 24 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startX="0"
                android:endX="160"
                android:type="linear">
                <item android:offset="0.00" android:color="#FF1F1F1F" />
                <item android:offset="0.40" android:color="#FF242424" />
