                <item android:offset="0.80" android:color="#FF252525" />
                <item android:offset="1.00" android:color="#FF1A1A1A" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- 2. Top Card Half (Y: 2-80, covers upper border gap) -->
    <path android:pathData="M 2 24 Q 2 2 24 2 L 136 2 Q 158 2 158 24 L 158 80 L 2 80 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startY="2"
                android:endY="80"
                android:type="linear">
                <item android:offset="0.00" android:color="#FF151515" />
