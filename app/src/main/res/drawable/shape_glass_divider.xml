<?xml version="1.0" encoding="utf-8"?>
<!-- Glass Widget Divider: Soft & Light -->
<!-- Much lighter gradient to be subtle -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Lighter gradient: 5% black to 15% black -->
    <!-- This creates a very faint crease that blends (dynamic) with background -->
    <gradient
        android:type="linear"
        android:angle="270"
        android:startColor="#05000000"
        android:endColor="#15000000" />
        
</shape>
