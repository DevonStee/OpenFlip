<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/openflipWidgetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="0dp">

    <!-- HOUR CARD -->
    <TextClock
        android:id="@+id/clockHour"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/shape_openflip_split"
        android:format12Hour="h"
        android:format24Hour="HH"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textAppearance="@style/TextAppearance.OpenFlip.ClockDigits"
        android:textColor="@color/widget_text_secondary"
        android:textSize="90sp" />

    <!-- MINUTE CARD -->
    <TextClock
        android:id="@+id/clockMinute"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/shape_openflip_split"
        android:format12Hour="mm"
        android:format24Hour="mm"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textAppearance="@style/TextAppearance.OpenFlip.ClockDigits"
        android:textColor="@color/widget_text_secondary"
        android:textSize="90sp" />

</LinearLayout>
