<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/openflipWidgetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="8dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- HOUR CARD WRAPPER (with shadow layer behind) -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Shadow Background Layer (Behind content) -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="top|start"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/shape_solid_card_shadow" />

        <!-- Card Content Layer -->
        <LinearLayout
            android:id="@+id/widgetHourCard"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="top|start"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:clipChildren="true"
            android:clipToPadding="true">

            <!-- Top Half: 64dp -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:clipChildren="true"
                android:background="@drawable/shape_card_solid_top">
                <TextClock
                    android:id="@+id/clockHourTop"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:format12Hour="h"
                    android:format24Hour="HH"
                    android:includeFontPadding="false"
                    android:textAppearance="@style/TextAppearance.OpenFlip.ClockDigits"
                    android:textColor="@color/widget_text_color"
                    android:textSize="86sp" />
            </FrameLayout>

            <!-- 2dp Gap -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/widget_background_dark_gray" />

            <!-- Bottom Half: 64dp -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:clipChildren="true"
                android:background="@drawable/shape_card_solid_bottom">
                <TextClock
                    android:id="@+id/clockHourBottom"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:format12Hour="h"
                    android:format24Hour="HH"
                    android:includeFontPadding="false"
                    android:textAppearance="@style/TextAppearance.OpenFlip.ClockDigits"
                    android:textColor="@color/widget_text_color"
                    android:textSize="86sp" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- MINUTE CARD WRAPPER (with shadow layer behind) -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Shadow Background Layer (Behind content) -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="top|start"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/shape_solid_card_shadow" />

        <!-- Card Content Layer -->
        <LinearLayout
            android:id="@+id/widgetMinuteCard"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="top|start"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:clipChildren="true"
            android:clipToPadding="true">

            <!-- Top Half: 64dp -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:clipChildren="true"
                android:background="@drawable/shape_card_solid_top">
                <TextClock
                    android:id="@+id/clockMinuteTop"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:format12Hour="mm"
                    android:format24Hour="mm"
                    android:includeFontPadding="false"
                    android:textAppearance="@style/TextAppearance.OpenFlip.ClockDigits"
                    android:textColor="@color/widget_text_color"
                    android:textSize="86sp" />
            </FrameLayout>

            <!-- 2dp Gap -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/widget_background_dark_gray" />

            <!-- Bottom Half: 64dp -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:clipChildren="true"
                android:background="@drawable/shape_card_solid_bottom">
                <TextClock
                    android:id="@+id/clockMinuteBottom"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:format12Hour="mm"
                    android:format24Hour="mm"
                    android:includeFontPadding="false"
                    android:textAppearance="@style/TextAppearance.OpenFlip.ClockDigits"
                    android:textColor="@color/widget_text_color"
                    android:textSize="86sp" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
