<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/openflipWidgetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="4dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- HOUR CARD -->
    <LinearLayout
        android:id="@+id/widgetHourCard"
        android:layout_width="130dp"
        android:layout_height="124dp"
        android:layout_marginEnd="6dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:clipChildren="true"
        android:clipToPadding="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginBottom="-1dp"
            android:clipChildren="true"
            android:background="@drawable/shape_openflip_white_top">
            <TextClock
                android:id="@+id/clockHourTop"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_gravity="top"
                android:gravity="center"
                android:format12Hour="h"
                android:format24Hour="HH"
                android:includeFontPadding="false"
                android:textAppearance="@style/TextAppearance.OpenFlip.ClockDigits"
                android:textColor="@color/widget_white_text"
                android:textSize="86sp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="6.5dp"
            android:layout_marginEnd="6.5dp"
            android:background="@color/widget_white_divider" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="-1dp"
            android:clipChildren="true"
            android:background="@drawable/shape_openflip_white_bottom">
            <TextClock
                android:id="@+id/clockHourBottom"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="-2dp"
                android:gravity="center"
                android:format12Hour="h"
                android:format24Hour="HH"
                android:includeFontPadding="false"
                android:textAppearance="@style/TextAppearance.OpenFlip.ClockDigits"
                android:textColor="@color/widget_white_text"
                android:textSize="86sp" />
        </FrameLayout>
    </LinearLayout>

    <!-- MINUTE CARD -->
    <LinearLayout
        android:id="@+id/widgetMinuteCard"
        android:layout_width="130dp"
        android:layout_height="124dp"
        android:layout_marginStart="6dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:clipChildren="true"
        android:clipToPadding="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginBottom="-1dp"
            android:clipChildren="true"
            android:background="@drawable/shape_openflip_white_top">
            <TextClock
                android:id="@+id/clockMinuteTop"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_gravity="top"
                android:gravity="center"
                android:format12Hour="mm"
                android:format24Hour="mm"
                android:includeFontPadding="false"
                android:textAppearance="@style/TextAppearance.OpenFlip.ClockDigits"
                android:textColor="@color/widget_white_text"
                android:textSize="86sp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="6.5dp"
            android:layout_marginEnd="6.5dp"
            android:background="@color/widget_white_divider" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="-1dp"
            android:clipChildren="true"
            android:background="@drawable/shape_openflip_white_bottom">
            <TextClock
                android:id="@+id/clockMinuteBottom"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="-2dp"
                android:gravity="center"
                android:format12Hour="mm"
                android:format24Hour="mm"
                android:includeFontPadding="false"
                android:textAppearance="@style/TextAppearance.OpenFlip.ClockDigits"
                android:textColor="@color/widget_white_text"
                android:textSize="86sp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
