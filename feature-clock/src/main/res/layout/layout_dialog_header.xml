<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="24dp"
    android:paddingBottom="12dp"
    android:paddingHorizontal="20dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:gravity="center"
        android:text="@string/titleSelectDuration"
        android:textAppearance="?attr/textAppearanceHeadlineMedium"
        android:textAllCaps="true"

        android:lineSpacingMultiplier="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonClose"
        android:layout_width="@dimen/dialogCloseButtonSize"
        android:layout_height="@dimen/dialogCloseButtonSize"
        android:background="@drawable/shape_settings_icon_filled"
        android:contentDescription="@string/accessibilityClose"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_navigation_close_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/settingsControlForeground" />

</androidx.constraintlayout.widget.ConstraintLayout>
