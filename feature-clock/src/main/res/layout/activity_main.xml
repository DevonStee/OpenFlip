<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@android:color/transparent">

    <com.bokehforu.openflip.feature.clock.view.FullscreenFlipClockView
        android:id="@+id/flipClockView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Swipe-to-dim hint icon (shown during vertical swipe) -->
    <ImageView
        android:id="@+id/swipeHintIcon"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:contentDescription="@string/titleSwipeToDim"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/settingsDivider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="?attr/settingsExplanationText"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/settingsModulesContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/settingsModulesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- LIGHT Module -->
        <LinearLayout
            android:id="@+id/lightModule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <include
                android:id="@+id/stateToggleButtonInclude"
                layout="@layout/layout_button_state_toggle"
                android:layout_width="64dp"
                android:layout_height="64dp" />

            <View
                android:id="@+id/lightDot"
                android:layout_width="@dimen/status_dot_size"
                android:layout_height="@dimen/status_dot_size"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_status_dot"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/lightLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_label_light"
                android:textAppearance="?attr/textAppearanceLabelMicro"
                android:textColor="?attr/settingsExplanationText"
                android:letterSpacing="0.12"
                android:paddingStart="0.84sp"
                android:paddingEnd="0.84sp"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <!-- TIME SET Module -->
        <LinearLayout
            android:id="@+id/tuningModule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <include
                android:id="@+id/infiniteKnobButtonInclude"
                layout="@layout/layout_button_infinite_knob"
                android:layout_width="64dp"
                android:layout_height="64dp" />

            <View
                android:id="@+id/tuningDot"
                android:layout_width="@dimen/status_dot_size"
                android:layout_height="@dimen/status_dot_size"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_status_dot"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tuningLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_label_tuning"
                android:textAppearance="?attr/textAppearanceLabelMicro"
                android:textColor="?attr/settingsExplanationText"
                android:letterSpacing="0.12"
                android:paddingStart="0.84sp"
                android:paddingEnd="0.84sp"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <!-- INVERT Module -->
        <LinearLayout
            android:id="@+id/invertModule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <include
                android:id="@+id/themeToggleButtonInclude"
                layout="@layout/layout_button_theme_toggle"
                android:layout_width="64dp"
                android:layout_height="64dp" />

            <View
                android:id="@+id/invertDot"
                android:layout_width="@dimen/status_dot_size"
                android:layout_height="@dimen/status_dot_size"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_status_dot"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/invertLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_label_invert"
                android:textAppearance="?attr/textAppearanceLabelMicro"
                android:textColor="?attr/settingsExplanationText"
                android:letterSpacing="0.12"
                android:paddingStart="0.84sp"
                android:paddingEnd="0.84sp"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <!-- SETTING Module -->
        <LinearLayout
            android:id="@+id/settingModule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <include
                android:id="@+id/settingsButtonInclude"
                layout="@layout/layout_button_settings"
                android:layout_width="@dimen/settingsButtonSize"
                android:layout_height="@dimen/settingsButtonSize" />

            <View
                android:id="@+id/settingDot"
                android:layout_width="@dimen/status_dot_size"
                android:layout_height="@dimen/status_dot_size"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_status_dot"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/settingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_label_options"
                android:textAppearance="?attr/textAppearanceLabelMicro"
                android:textColor="?attr/settingsExplanationText"
                android:letterSpacing="0.12"
                android:paddingStart="0.84sp"
                android:paddingEnd="0.84sp"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/composeSettingsSheetHost"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
